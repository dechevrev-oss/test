    </footer>

    <script>
        function showTab(tabName) {
            // Hide all tabs
            const tabs = document.querySelectorAll('.tab-content');
            tabs.forEach(tab => tab.classList.remove('active'));
            
            // Remove active class from all buttons
            const buttons = document.querySelectorAll('.nav-links button');
            buttons.forEach(btn => btn.classList.remove('active'));
            
            // Show selected tab
            document.getElementById(tabName).classList.add('active');
            document.getElementById('btn-' + tabName).classList.add('active');
            
            // Reset to categories view if showing accompagnements
            if (tabName === 'accompagnements') {
                backToCategories();
            }
        }

        function showArticles(category) {
            // Hide categories view
            document.getElementById('categories-view').style.display = 'none';
            
            // Hide all articles sections
            const articlesSections = document.querySelectorAll('.articles-section');
            articlesSections.forEach(section => section.classList.remove('active'));
            
            // Show selected articles section
            document.getElementById('articles-' + category).classList.add('active');
            
            // Scroll to top
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        function backToCategories() {
            // Show categories view
            document.getElementById('categories-view').style.display = 'block';
            
            // Hide all articles sections
            const articlesSections = document.querySelectorAll('.articles-section');
            articlesSections.forEach(section => section.classList.remove('active'));
            
            // Scroll to top
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }
    </script>
</body>
</html>
