    <script>
        console.log('‚úÖ JavaScript charg√© avec succ√®s !');
        
        function showHome() {
            console.log('üè† showHome() appel√©e');
            hideAllPages();
            document.getElementById('homePage').classList.remove('hidden');
        }
        
        function showSection(sectionId) {
            console.log('üìÑ showSection() appel√©e avec:', sectionId);
            hideAllPages();
            const pageId = sectionId + 'Page';
            const page = document.getElementById(pageId);
            if (page) {
                page.classList.remove('hidden');
            } else {
                console.error('‚ùå Page non trouv√©e:', pageId);
            }
        }
        
        function hideAllPages() {
            document.getElementById('homePage').classList.add('hidden');
            document.getElementById('blogPage').classList.add('hidden');
            document.getElementById('proPage').classList.add('hidden');
            document.getElementById('aboutPage').classList.add('hidden');
        }
        
        // Test au chargement
        window.addEventListener('DOMContentLoaded', function() {
            console.log('‚úÖ Page charg√©e - Test des fonctions...');
            console.log('Test showHome:', typeof showHome);
            console.log('Test showSection:', typeof showSection);
        });
    </script>
